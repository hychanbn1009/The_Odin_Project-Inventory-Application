extends layout

block content
  h1 #{title}: #{category.name}

  if category_items.length

    p #[strong Delete the following Item before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Item

      dl
      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

  else
    p Do you really want to delete this Author?

    form(method='POST' action='')
      div.form-group
        input#category_id.form-control(type='hidden',name='category_id', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete
